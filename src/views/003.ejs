    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const mainImage = document.querySelector('.product img');
            const alternateImages = document.querySelectorAll('.alternate-images img');
    
            alternateImages.forEach(function (alternateImage) {
                alternateImage.addEventListener('click', function () {
                    mainImage.src = alternateImage.src;
                    mainImage.alt = alternateImage.alt;
    
                    alternateImages.forEach(function (img) {
                        if (img === alternateImage) {
                            img.classList.add('selected');
                        } else {
                            img.classList.remove('selected');
                        }
                    });
                });
            });
        });
